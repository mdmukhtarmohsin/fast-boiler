# --- AUTH-ENABLED USER CONTROLLER (ADMIN CRUD) ---
from app.auth.routers import fastapi_users
from app.models.user_model import User
from app.schemas.user_schema import UserRead, UserUpdate
from app.services.user_service import user_service as service

current_superuser = fastapi_users.current_user(active=True, superuser=True)

router = APIRouter(prefix="/users", tags=["users"])

@router.get("/", response_model=Page[UserRead])
async def get_all_users(
    query: dict = Depends(parse_query_params),
    db: AsyncSession = Depends(get_db),
    user: User = Depends(current_superuser)
):
    """(Admin Only) Get a paginated list of all users."""
    return await service.get_all(db, query=query)

@router.get("/{user_id}", response_model=UserRead)
async def get_user_by_id(
    user_id: int,
    db: AsyncSession = Depends(get_db),
    user: User = Depends(current_superuser)
):
    """(Admin Only) Get a single user by their ID."""
    db_user = await service.get_by_id(db, id=user_id)
    if db_user is None:
        raise HTTPException(status_code=404, detail="User not found")
    return db_user

@router.put("/{user_id}", response_model=UserRead)
async def update_user_by_id(
    user_id: int,
    payload: UserUpdate,
    db: AsyncSession = Depends(get_db),
    user: User = Depends(current_superuser)
):
    """(Admin Only) Update a user's information."""
    db_user = await service.update(db, id=user_id, payload=payload)
    if db_user is None:
        raise HTTPException(status_code=404, detail="User not found")
    return db_user

@router.delete("/{user_id}", status_code=status.HTTP_204_NO_CONTENT)
async def delete_user_by_id(
    user_id: int,
    db: AsyncSession = Depends(get_db),
    user: User = Depends(current_superuser)
):
    """(Admin Only) Delete a user."""
    db_user = await service.delete(db, id=user_id)
    if db_user is None:
        raise HTTPException(status_code=404, detail="User not found")
    return None

# Add pagination to the router
add_pagination(router)

